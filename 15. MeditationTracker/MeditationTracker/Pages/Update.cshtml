@page
@model MeditationTracker.Pages.UpdateModel
@{
}

<div class="container mt-4">
    <form method="post">
        <div class="form-group">
            <label for="date">Date</label>
            <input type="date" class="form-control" id="date" name="date" value="@Model.Meditation.Date" required>
        </div>
        <div class="form-group">
            <label for="duration">Duration (in Hours)</label>
            <input type="number" class="form-control" id="duration" name="duration" value="@Model.Meditation.Duration" required>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-page="Index" class="btn btn-secondary">Back to list</a>
    </form>
</div>